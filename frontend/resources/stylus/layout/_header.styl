header
	center(100%)
	background black
	color white
	padding 5px 2%
	height 40px
	width 100%
	position fixed
	z-index 10
	h1, ul
		column(1/2)
	h1
		font-family $UPCSGothicRgCapBold
		color #e5ebe2
		font-size 25px
		img
		span
			vertical-align middle
		img
			margin-right 10px
	ul
		text-align right
		li
			max-width 150px
			vertical-align middle
			display inline-block
			margin-right 15px
			a
				display block
				color #e5ebe2
				line-height 2.24
				font-family $UPCSGothicRgCapBold