		.circle_box
			margin-bottom -6px
			position relative
			z-index 1

		span
			font-family $FiraSansCondensed-Regular
			font-size 15px
			color #82878e
		.list_timeline
			>li
				list-style-type none
				position relative
				width 6px
				margin 0 auto
				background #d9d9d9
				.icon
				span
					display inline-block
					vertical-align top
				.list_caracteristics
					li
						margin-bottom 18px
				&:nth-child(even)
					.box_time
						left 45px
						text-align left
						span
							width 360px
						.icon
							padding-right 10px
				&:nth-child(odd)
					.box_time
						left -439px
						text-align right
						span
							width 360px
						.icon
							color #e7322f
							padding-left 10px
				.box_time
					position relative
					bottom 0
					width 420px
					padding 15px
				&:after
					content ''
					position absolute
					left 50%
					top 48%
					transform translateX(-50%)
					width 30px
					height 30px
					border-radius 50%
					background #d2d4d6
					cursor pointer
				&.actived
					&:after
						background #e7322f
						width 14px
						height 14px
						border solid 8px #d2d4d6
