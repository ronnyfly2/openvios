form
	&.search_news
		width 100%
		.box_search
			background-color #f3f9ff
			padding 10px 0
			fieldset
				width 100%
				padding 4px 20px
				margin 15px 0
			input
				width 100%
				height 38px
				border 0
				padding-top 15px
				color #3399ff
				background #f3f9ff
				border-bottom 2px solid #3399ff
				font-size 17px
				font-family $HelveticaLTStdRoman
				&::-webkit-input-placeholder
					color #3399ff
					font-size 17px
					font-family $HelveticaLTStdRoman
				&::-moz-placeholder
					color #3399ff
					font-size 17px
					font-family $HelveticaLTStdRoman
				&:-ms-input-placeholder
					color #3399ff
					font-size 17px
					font-family $HelveticaLTStdRoman
				&:-moz-placeholder
					color #3399ff
					font-size 17px
					font-family $HelveticaLTStdRoman
			.select_lightblue
				max-width 458px
				height 38px
				font-size 17px
				font-family $HelveticaLTStdRoman
				color #5d5d5d
				width 40%
				padding-top 5px
			.selection
				font-size 17px
				font-family $HelveticaLTStdRoman
				color #5d5d5d
		.txt_right
			text-align right
			width 100%
			margin-top 20px
.box_list_news
	margin-top 25px
	ul
		font-size 0
		text-align center
	li.item_news
		border 1px solid #babbbc
		max-width 326px
		width 30%
		margin 10px
		display inline-block
		vertical-align top
		text-align left
		h2
		a
			font-size 22px
			line-height .88
	.ctn_img_news
		max-width 326px
		width 100%
		img
			width 100%
	.ctn_txt_news
		padding 15px
	.tags
		border-bottom 0 !important
		margin-top 10px
		margin-bottom 4px
	.date
		border-top 1px solid #eeeeee
		width 180px
		padding-top 7px
.paginator
	width 100%
	text-align center
	margin-top 15px
	ul
	li
		display inline-block
		vertical-align top
	li
		margin 0 5px
	a
		display inline-block
		font-size 18px
		vertical-align top
		color #6f7072
		&.selected
		&:hover
			color #e1272a
		&.disabled
			color #d8d9da

